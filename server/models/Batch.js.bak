//Batch.js
const mongoose = require('mongoose');
const crypto = require('crypto');

const batchSchema = new mongoose.Schema({
  batchId: { type: String, required: true, unique: true },
  medicineName: { type: String, required: true },
  manufacturer: { type: String, required: true }, // Manufacturer's name
  manufacturerId: { type: String, required: true }, // Manufacturer's ID
  expiryDate: { type: Date, required: true },
  
  // Inventory tracking
  totalCartons: { type: Number, required: true },
  boxesPerCarton: { type: Number, required: true },
  smallBoxesPerBox: { type: Number, required: true },
  stripsPerSmallBox: { type: Number, required: true },
  tabletsPerStrip: { type: Number, required: true },
  
  // Calculated totals (set on creation)
  totalTablets: { type: Number },
  remainingTablets: { type: Number },
  
  // Tracking
  createdAt: { type: Date, default: Date.now },
  verificationKey: { type: String, required: true },
  blockchainHash: { type: String },
  qrCodePath: { type: String },
  
  // Batch status
  status: {
    type: String,
    enum: ['created', 'in-distribution', 'completed', 'expired', 'invalid'],
    default: 'created'
  },
  
  // Current holder in supply chain
  currentHolder: {
    type: String,
    enum: ['Manufacturer', 'Wholesaler', 'Retailer', 'Consumer'],
    default: 'Manufacturer'
  }
});

// Generate verification key before saving
batchSchema.pre('save', function(next) {
  if (!this.verificationKey) {
    const data = `${this.batchId}${this.medicineName}${this.manufacturerId}${Date.now()}`;
    this.verificationKey = crypto.createHash('sha256').update(data).digest('hex').substring(0, 16);
  }
  
  // Calculate total tablets if not set
  if (!this.totalTablets) {
    this.totalTablets = 
      this.totalCartons * 
      this.boxesPerCarton * 
      this.smallBoxesPerBox * 
      this.stripsPerSmallBox * 
      this.tabletsPerStrip;
    
    this.remainingTablets = this.totalTablets;
  }
  
  next();
});

module.exports = mongoose.model('Batch', batchSchema);

